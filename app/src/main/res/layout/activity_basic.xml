<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >

    <ImageView
            android:layout_width="80dp"
            android:layout_weight=".1"
            android:layout_height="110dp" tools:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/img2"

            android:layout_marginRight="20dp" app:srcCompat="@drawable/ic_launcher_background"/>
            //android:maxHeight="dp"
            android:layout_marginHorizontal="10dp"
    />


    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginLeft="-10dp"
                  android:layout_height="99dp"
                  android:orientation="vertical"
                  android:layout_weight="7"
    >
        <TextView
                android:layout_marginRight="50dp"
                android:layout_marginTop="15dp"
                android:textSize="25dp"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:text="Hello world!"
                android:textColor="#000"
                android:textStyle="bold"
        />
        <TextView
                android:layout_marginRight="50dp"
                android:textSize="25dp"
                android:text="submit"
                android:textColor="#6B6767"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/text2"/>
    </LinearLayout>


</LinearLayout>